# shamelessly stolen from luke smith
alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -vI" \

# colorized stuff, thanks luke
alias \
	ls="ls -hN --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi" \
	ip="ip -color=auto"

# shortcuts
alias fastfetch="clear; echo; fastfetch; echo"
alias ff="fastfetch"
alias bcdl="bandcamp-dl"
alias nano="nvim"
alias cmus="cmus"
